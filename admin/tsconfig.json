{
    "compilerOptions": {
        "jsx": "preserve",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": false,
        "lib": ["dom", "esnext"]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "deprecated/index.tsx"],
    "exclude": ["node_modules", "dist"]
}
